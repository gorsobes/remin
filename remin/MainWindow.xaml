<Window x:Class="remin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Напоминалка" Height="800" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="InputTextBox" Width="650" Height="25" 
                 Margin="10" HorizontalAlignment="Center"
                 TextChanged="InputTextBox_TextChanged"
                 KeyDown="InputTextBox_KeyDown"
                 FontSize="16"/>

        <DatePicker x:Name="ReminderDatePicker" 
                    Margin="10" Grid.Row="1"
                    HorizontalAlignment="Center" SelectedDateChanged="ReminderDatePicker_SelectedDateChanged"/>

        <Button x:Name="AddButton" Content="Добавить" Width="100" Height="30"
                Click="AddButton_Click" Grid.Row="2"
                IsEnabled="False" />

        <ListBox x:Name="RemindersList" Margin="10,10,10,10" Grid.Row="3"
         SelectionChanged="RemindersList_SelectionChanged"
                 FontSize="16"/>


        <Button x:Name="DeleteButton" Content="Удалить" Width="100" Height="30"
                Click="DeleteButton_Click" Grid.Row="4"
                IsEnabled="False" />

    </Grid>
</Window>
